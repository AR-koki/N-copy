<div class="container">
	<div>
		<h3>新規映画</h3>
		<%= form_with model: @movie, url:admins_movies_path do |f| %>
		<%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
		<label><%= f.radio_button :is_active, true %>有効</label>
		<label><%= f.radio_button :is_active, false %>無効</label><br>
		<p>ムービー</p><br>
		<%= f.file_field :image_id, :accept => 'video/*' %>
		<p>タイトル</p><br>
		<%= f.text_field :title %><br>
		<p>内容</p><br>
		<%= f.text_area :introduction %><br>
		<%= f.submit "追加" %>
		<% end %>
	</div>
</div>