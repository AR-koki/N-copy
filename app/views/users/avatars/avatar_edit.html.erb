<div class="container">
	<div style="margin: 0 auto;width: 400px;text-align: center;">
		<h1>プロフィールの管理:</h1>
			<% @avatars.each do |avatar| %>
					<div style="width: 100px;height: 100%;text-align: center;float: left;">
						<%= link_to edit_users_avatar_path(avatar) do %>
						<div style="width: 100px;height: 100px;border: 1px solid;">
						</div>
						<%= avatar.name %>
					</div>
				<% end %>
			<% end %>
		<div>
			<%= link_to new_users_avatar_path do %>
				<i class="glyphicon glyphicon-plus" aria-hidden="true" style="font-size: 50px;line-height: 100px;margin-left: 30px;"></i>
			<% end %>
		</div>
	</div>
	<div style="clear: both;text-align: center;border: 1px solid;width: 100px;margin: 80px auto;">
		<%= link_to "完了", users_avatars_path(current_user) %>
	</div>
</div>