<div class="container">
	<h2><%= @movie.title %></h2>
	<p><%= @movie.introduction %></p>
	<div>
		<% if @movie.my_list_by?(current_user) %>
			<div>
				<%= link_to users_movie_my_lists_path(@movie), method: :delete do %>
					<p>-</p>
				<% end %>
			</div>
		<% else %>
			<div>
				<%= link_to users_movie_my_lists_path(@movie), method: :post do %>
					<p>+</p>
				<% end %>
			</div>
		<% end %>
	</div>
	<h3>エピソード</h3>
	<div>
		<% @movie.items.each do |item| %>
			<table>
				<tr>
					<%= link_to users_item_path(item) do %>
						<div class="row">
							<div style="float: left;"><%= item.id %></div>
							<div style="float: left;margin-left: 50px;">
								<div class="row"><%= item.story %></div>
								<div class="row"><%= item.gist %></div>
							</div>
						</div>
					<% end %>
				</tr>
			</table>
		<% end %>
	</div>
</div>